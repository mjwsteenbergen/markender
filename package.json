{
    "name": "markender",
    "displayName": "markender",
    "description": "Creating beautiful markdown documents",
    "version": "1.0.1",
    "publisher": "mjwsteenbergen",
    "repository": {
        "type": "git",
        "url": "https://github.com/mjwsteenbergen/markender"
    },
    "engines": {
        "vscode": "^1.26.0"
    },
    "keywords": [
        "markdown",
        "tools",
        "web-components"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello"
    ],
    "main": "./dist/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.sayHello",
                "title": "Hello World"
            }
        ],
        "snippets": [
            {
                "language": "markdown",
                "path": "./snippets/markdown.json"
            }
        ],
        "markdown.previewScripts": [
            "./dist/scripts.js"
        ],
        "markdown.previewStyles": [
            "./dist/scripts.css"
        ],
        "markdown.markdownItPlugins": true
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./ && npx webpack",
        "watch": "(npm run watch-extension)",
        "watch-plugin": "npx webpack --watch --progress",
        "watch-extension": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "dependencies": {
        "markdown-it-enml-todo": "^1.0.2",
        "markdown-it-katex": "^2.0.3"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^8.10.25",
        "css-loader": "^1.0.0",
        "mini-css-extract-plugin": "^0.4.2",
        "node-sass": "^4.9.3",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.0",
        "ts-loader": "^4.5.0",
        "tslint": "^5.8.0",
        "typescript": "^3.0.1",
        "vscode": "^1.1.21",
        "webpack": "^4.17.1",
        "webpack-cli": "^3.1.0"
    }
}
